<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".Add_MainActivity"
    android:layout_height="match_parent"
    android:background="#00c2cb">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#069fb6"
        android:text="ADD WATER"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textColor="#FFEB3B"
        android:textSize="30dp"
        android:textStyle="bold" />
    <TextView
        android:text="Tên Nước"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="#FFFF00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edt_tenmonan"
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="350dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:background="@drawable/reunded"
        android:textColor="#3F51B5"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Giá Nước"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="#FFFF00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:id="@+id/edt_giamonan"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/reunded"
        android:layout_width="350dp"
        android:textColor="#3F51B5"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Chú Thích"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="#FFFF00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textSize="22dp"
        android:paddingTop="8dp"
        android:paddingLeft="14dp"
        android:lines="1"
        android:id="@+id/edt_motamonan"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:background="@drawable/reunded"
        android:layout_width="350dp"
        android:textColor="#3F51B5"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="26dp"
        android:text="save"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:id="@+id/btn_save"
        android:backgroundTint="#03A9F4"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/reunded"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="26dp"
        android:text="back"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        android:id="@+id/btn_back"
        android:backgroundTint="#E91E63"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/reunded"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
</LinearLayout>